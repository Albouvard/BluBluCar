{% extends 'base.html.twig' %}
<head>
    <title>Animate.css</title>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1, minimal-ui">

    <link rel="dns-prefetch" href="//fonts.googleapis.com">
    <link rel="dns-prefetch" href="//code.jquery.com">

    <link href="//fonts.googleapis.com/css?family=Roboto:400,100,400italic,700italic,700" rel="stylesheet" type="text/css">

    <link rel="stylesheet" href="animate.min.css">
    <link rel="stylesheet" href="style.css">
</head>
{% block body %}
    <style type="text/css">
        .card{
            width: 600px;
            background-color: rgba(0,0,0,0.5) !important;
            border-radius: 5px;
        }

    </style>

<div class="mt-4 container ml-auto mr-auto card text-light">
    <div class="card-header">
        <h3>Cr√©er un voyage</h3>

    </div>
    {{ form_start(form) }}
    <div>{{ form_row(form.ville_depart) }}</div>
    <div>{{ form_row(form.ville_arrive) }}</div>
    <div>{{ form_row(form.horaire_at) }}</div>
    <div>{{ form_row(form.nbPlaces) }}</div>
    <div style="display:none">{{ form_row(form.idConducteur) }}</div>


    <div class="form-group">
        <button class="btn btn-primary float-right mb-4 mt-3"> S'inscrire </button>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}