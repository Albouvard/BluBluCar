{% extends 'base.html.twig' %}

{% block body %}
    <style type="text/css">
        .card{
            width: 600px;
            background-color: rgba(0,0,0,0.5) !important;
            border-radius: 5px;
        }

    </style>

<div class="mt-4 container ml-auto mr-auto card text-light">
    <div class="card-header">
        <h3>Créer un voyage</h3>

    </div>
    {{ form_start(form) }}
    <div>{{ form_row(form.ville_depart) }}</div>
    <div>{{ form_row(form.ville_arrive) }}</div>
    <div>{{ form_row(form.horaire_at) }}</div>
    <div>{{ form_row(form.nbPlaces) }}</div>
    <div style="display:none">{{ form_row(form.idConducteur) }}</div>


    <div class="form-group">
        <button class="btn btn-primary float-right mb-4 mt-3"> S'inscrire </button>
    </div>
    {{ form_end(form) }}
    <div class="card-footer">
        <div class="d-flex justify-content-center links">
            Un voyage existe peut-être déjà ? <a class="ml-2" href="{{ path('usager.search')}}">Rechercher un itinéraire</a>
        </div>
    </div>
</div>
{% endblock %}