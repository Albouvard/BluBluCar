{% extends 'base.html.twig' %}

{% block body %}
    <div class="mt-4 container ml-auto mr-auto">
        <h1> Connexion</h1>
        {{ form_start(form) }}
        <div class="row">
            <div class=".col-md-5 mr-5">{{ form_row(form.nom) }}</div>
        </div>
        <div class="row">
            <div class=".col-md-5 mr-5">{{ form_row(form.prenom) }}</div>
        </div>
        <div class ="row">
            <div class=".col-md-6 ">{{ form_row(form.ddn_at) }}</div>
        </div>
        <div class ="row">
            <div class=".col-md-5">{{ form_row(form.telephone) }}</div>
        </div>
        <div class ="row">
            <div class=".col-md-5 mr-5">{{ form_row(form.mail) }}</div>
        </div>
        <div class ="row">
            <div class=".col-md-5 mr-5">{{ form_row(form.pseudo) }}</div>
        </div>
        <div class ="row">
            <div class=".col-md-5">{{ form_row(form.motdepasse) }}</div>
        </div>
            {{ form_rest(form) }}
        <div class ="row">
            <button class=" btn btn-primary"> S'inscrire </button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}